{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}

